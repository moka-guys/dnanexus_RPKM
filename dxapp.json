{
  "name": "RPKM_using_conifer",
  "title": "RPKM using conifer",
  "summary": "Perform CNV analysis using conifer",
  "tags": [
    "CNV"
  ],
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "bamfiles",
      "label": "bamfiles",
      "help": "A samamba bedfile.",
      "class": "file",
      "patterns": ["*.bed"]
    },
  {
      "name": "bamfile",
      "label": "bamfile",
      "help": "bam file.",
      "class": "file",
      "patterns": ["*.bam"]
    },
  {
      "name": "bam_index",
      "label": "bamfile_index",
      "help": "bam index.",
      "class": "file",
      "patterns": ["*.bai"]
    }
  ],
  "outputSpec": [
    {
      "name": "chanjo_output",
      "label": "chanjo output",
      "help": "A csv file containing the coverage for each exoncoordinate-sorted BAM file with the resulting mappings.",
      "class": "array:file"
    }
  ],
  "runSpec":  {
    "execDepends": [
      {
        "name": "bedtools"
      },
      {
        "name": "sqlite3"
      }
    ],
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x32"
      }
    },
    "file": "src/code.sh",
    "interpreter": "bash"
  }
}