{
  "name": "RPKM_using_conifer_v1.3",
  "title": "RPKM using conifer v1.3",
  "summary": "v1.3  Perform CNV analysis using conifer",
  "tags": [
    "CNV"
  ],
  "properties": {
    "github release": "v1.3"
  },
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "project_name",
      "label": "project_name",
      "help": "The project containing the bamfiles.",
      "class": "string"
    },
    {
      "name": "bedfile",
      "label": "bedfile",
      "help": "bed file.",
      "class": "file",
      "patterns": ["*.bed"]
    },
    {
      "name": "bamfile_name",
      "label": "bamfile_name",
      "help": "bamfile_name",
      "class": "string"
    }
  ],
  "outputSpec": [
    {
      "name": "conifer_output",
      "label": "conifer output",
      "help": "An array of files from conifer.",
      "class": "array:file"
    }
  ],
  "runSpec": {
    "distribution": "Ubuntu",
    "release": "14.04",
    "execDepends": [
      {
        "name": "dos2unix"
      }
    ],
    "file": "src/code.sh",
    "interpreter": "bash"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "main": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    }
  }
}
